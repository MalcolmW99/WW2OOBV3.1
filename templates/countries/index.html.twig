{% extends 'base.html.twig' %}

{% block title %}Hello CountriesController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>List of Countries</h1>
    <p>Note that all higher location types will also appear in the country list 
        <table class="table">
             <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Country</th>
                    <th>Location Type</th>
                </tr>
            </thead>
            <tbody>
            {% for country in countries %}
                    <tr>
                        <td> {{ country.id }} </td>
                        <td> <a href= "{{ path('country_show', {'id': country.id}) }}">{{ country.country}}</td>
                        <td> {{ country.loctype.loctype}} </td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
</div>
{% endblock %}
