{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    a:visited {color:white}
</style>

<div class="example-wrapper">
    <div class="container-fluid class text-center">
        <h3> List of all Campaigns</h3>

        <table class="table">
             <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Campaign</th>
                    <th>Description</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Theatre</th>
                </tr>
            </thead>
            <tbody>
                {% for campaign in campaigns %}
                    <tr>
                        <td> <a href= "{{ path('campaign_show',{'id': campaign.id}) }}">{{ campaign.id }}</td>
                        <td> {{ campaign.campaign }}</td>
                        <td> {{ campaign.description }}</td>
                        <td> {{ campaign.StartDate|date('d/m/Y') }}</td>
                        <td> {{ campaign.EndDate|date('d/m/Y') }}</td>
                        <td> <a href= "{{ path('theatre_show', {'id': campaign.theatre.id}) }}">{{ campaign.theatre.theatre }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
