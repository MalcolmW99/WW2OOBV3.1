{% extends 'base.html.twig' %}

{% block title %}Order of Battle Page{% endblock %}

{% block body %}
<div class="container">
     <div class="row">
        <div class="col-12">
            <h2 class="my-4">Order of Battle stub</h2>
            <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                <div class="q-container-show p-4">
                    <div class="row">
                        <div class="col-2 text-center">
                            <img src="{{ asset('images/under-construction.gif') }}" width="100" height="100">
                        </div>
                        <div class="col">
                            <h1 class="q-title-show"></h1>
                            <div class="q-display p-3">
                                <i class="fa fa-quote-left mr-3"></i>
                                <p class="d-inline">The Order of Battle will emerge fom this stub.........eventually</p>
                            </div>
                        </div>
                    </div>
                </div>
                    <h4> Order Of Battle Of: {{ units.unit }}</h4>
                    <p class="d-inline">{{ oob }}
            </div>
        </div>
    </div>
{% endblock %}
