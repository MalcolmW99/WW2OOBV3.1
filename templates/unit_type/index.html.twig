{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>List of Unit Types</h1>
            <table class="table">
             <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Unit type</th>
                    <th>Force Type</th>
                    <th>Country</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
            {% for unittype in unittypes %}
                    <tr>
                        <td> {{ unittype.id }} </td>
                        <td> <a href= "{{ path('unittype_show', {'id': unittype.id}) }}">{{ unittype.unittype}}</td>
                        <td> {{ unittype.forcetype.forcetype }} </td>
                        <td> <a href= "{{ path('country_show', {'id': unittype.country.id}) }}">{{ unittype.country.country}} </td>
                        <td> {{ unittype.comments}} </td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
</div>
{% endblock %}
