{% extends 'base.html.twig' %}

{% block title %}Hello LocationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>List of Locations ({{ locations|length }})</h1>
    <p>Note that all higher location types will also appear in the location list 
        <table class="table">
             <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Location</th>
                    <th>Loc Type</th>
                </tr>
            </thead>
            <tbody>
            {% for location in locations %}
                    <tr>
                        <td> {{ location.id }} </td>
                        <td> <a href= "{{ path('location_show', {'id': location.id}) }}">{{ location.location}}</td>
                        <td> {{ location.loctype.loctype}} </td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
