{% extends 'base.html.twig' %}

{% block title %}Hello SubdivisionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>List of SubDivisions</h1>
    <p>Note that all higher location types will also appear in the subdivision list 
        <table class="table">
             <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>SubDivision</th>
                    <th>Loc Type</th>
                </tr>
            </thead>
            <tbody>
            {% for subdivision in subdivisions %}
                    <tr>
                        <td> {{ subdivision.id }} </td>
                        <td> <a href= "{{ path('subdivision_show', {'id': subdivision.id}) }}">{{ subdivision.subdivision}}</td>
                        <td> {{ subdivision.loctype.loctype}} </td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
</div>

{% endblock %}
