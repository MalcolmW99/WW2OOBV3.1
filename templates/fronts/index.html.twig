{% extends 'base.html.twig' %}

{% block title %}Welcome to WW2OOB{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 1500px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class="container-fluid class text-center">
        <h3> List of all Fronts</h3>

        <table class="table">
             <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Front</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Subcontinent</th>
                    <th>Force Type</th>
                    <th>Sort Order</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                {% for front in fronts %}
                    <tr>
                        <td> {{ front.id }}</td>
                        <td> <a href= "{{ path('front_show', {'id': front.id}) }}">{{ front.front }}</td>
                        <td> {{ front.StartDate|date('d/m/Y') }}</td>
                        <td> {{ front.EndDate|date('d/m/Y') }}</td>
                        <td> {{ front.subcontinent.subcontinent }}</td>
                        <td> {{ front.forcetype.ForceType }}</td>
                        <td> {{ front.sortOrder }}</td>
                        <td> {{ front.description }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

</div>
{% endblock %}
